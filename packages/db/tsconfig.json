{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "moduleResolution": "node",
    "types": ["node"],
    "emitDeclarationOnly": false
  },
  "files": [
    "src/index.ts",
    "src/auth.ts",
    "src/categories-sync.ts",
    "src/seed-categories.ts"
  ],
  "exclude": ["node_modules", "dist"]
}

