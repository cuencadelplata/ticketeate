{
  "extends": "../../packages/typescript-config/base.json",
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022"],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", ".turbo", ".tsbuildinfo"]
}
