    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^2.1.9",
    "prisma": "^6.19.0",
    "semantic-release": "^25.0.2",
    "serverless": "^3.40.0",
    "serverless-offline": "^13.9.0",
    "tsx": "^4.20.6",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.46.4",
    "vitest": "^2.1.9"
  }
