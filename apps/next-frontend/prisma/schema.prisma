generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Event {
  id            String   @id @default(cuid())
  name          String
  description   String?
  startDate     DateTime
  endDate       DateTime?
  location      String?
  capacity      Int?
  access        String   @default("PUBLIC") // PUBLIC, PRIVATE
  pricingType   String   @default("FREE")  // FREE, PAID
  imageUrl      String?
  producerId    String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relaciones
  tickets       Ticket[]
  ticketOptions TicketOption[]
  
  @@map("events")
}

model Ticket {
  id        String   @id @default(cuid())
  eventId   String
  userId    String?
  status    String   @default("AVAILABLE") // AVAILABLE, SOLD, USED
  createdAt DateTime @default(now())
  
  // Relaciones
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  @@map("tickets")
}

model TicketOption {
  id          String   @id @default(cuid())
  eventId     String
  name        String
  description String?
  price       Decimal  @default(0)
  quantity    Int
  createdAt   DateTime @default(now())
  
  // Relaciones
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  @@map("ticket_options")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@map("users")
}

/// Nuevos modelos basados en el diagrama: reservas, pagos, entradas, logs_eventos

model Reserva {
  id             Int        @id @default(autoincrement()) @map("id_reserva")
  id_usuario     Int
  id_evento      Int
  id_fecha       Int?
  id_categoria   Int?
  cantidad       Int
  estado         String
  fecha_reserva  DateTime   @default(now())

  pagos          Pago[]
  entradas       Entrada[]

  @@map("reservas")
}

model Pago {
  id          Int       @id @default(autoincrement()) @map("id_pago")
  reservaId   Int       @map("id_reserva")
  metodo_pago String
  monto_total Decimal
  estado      String
  fecha_pago  DateTime  @default(now())

  reserva     Reserva   @relation(fields: [reservaId], references: [id])

  @@map("pagos")
}

model Entrada {
  id         Int      @id @default(autoincrement()) @map("id_entrada")
  reservaId  Int      @map("id_reserva")
  codigo_qr  String
  estado     String

  reserva    Reserva  @relation(fields: [reservaId], references: [id])

  @@map("entradas")
}

model LogEvento {
  id        Int      @id @default(autoincrement()) @map("id_log")
  id_evento Int
  id_usuario Int
  accion    String
  detalle   String?
  fecha     DateTime @default(now())

  @@map("logs_eventos")
}