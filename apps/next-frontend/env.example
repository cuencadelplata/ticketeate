# Frontend API Authentication
# NOTE: Authentication is handled via session cookies from better-auth
# No public API keys are needed - the frontend includes Authorization headers automatically

# API Gateway Configuration
# Production: Uses API subdomain api.ticketeate.com.ar
# Development: Uses localhost:3001
NEXT_PUBLIC_API_URL=https://api.ticketeate.com.ar/production
NEXT_PUBLIC_API_GATEWAY_URL=https://api.ticketeate.com.ar

# Better Auth Configuration
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Resend Email Configuration
RESEND_API_KEY=your-resend-api-key

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-cloudinary-upload-preset

# Database Configuration
DATABASE_URL=your-database-url
DIRECT_URL=your-direct-database-url

# Redis Configuration (Upstash)
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# Microservices Configuration
NEXT_PUBLIC_EVENTS_SERVICE_URL=http://localhost:3001
NEXT_PUBLIC_USERS_SERVICE_URL=http://localhost:3002
NEXT_PUBLIC_CHECKOUT_SERVICE_URL=http://localhost:3003
NEXT_PUBLIC_PRODUCERS_SERVICE_URL=http://localhost:3004

# Service-to-Service Authentication
SERVICE_AUTH_SECRET=your-super-secret-service-key-change-in-production

# Mercado Pago OAuth Configuration
MERCADO_PAGO_CLIENT_ID=your-mercado-pago-client-id
MERCADO_PAGO_CLIENT_SECRET=your-mercado-pago-client-secret
MERCADO_PAGO_REDIRECT_URI=http://localhost:3000/api/mercadopago/callback

# Mercado Pago Platform Access Token (tu cuenta de plataforma)
# Este token se usa para crear preferencias con marketplace_fee
MP_PLATFORM_ACCESS_TOKEN=your-platform-access-token

# Mercado Pago Mock Mode (para desarrollo)
MERCADO_PAGO_MOCK=false

# ISR On-Demand Revalidation Secret
# Solo para webhooks externos - NO exponer al cliente
# Genera un secret seguro: [Convert]::ToBase64String([byte[]]@(1..32|%{Get-Random -Max 256}))
REVALIDATION_SECRET=your-revalidation-secret-key