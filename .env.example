# =============================================================================
# BASE DE DATOS
# =============================================================================
# URL de conexión a PostgreSQL (formato: postgresql://usuario:contraseña@host:puerto/nombre_db)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ticketeate"
# URL directa para migraciones (misma que DATABASE_URL generalmente)
DIRECT_URL="postgresql://postgres:postgres@localhost:5432/ticketeate"

# =============================================================================
# AUTENTICACIÓN (Better Auth)
# =============================================================================
# Secreto para firma de JWT (mínimo 32 caracteres, generar con: openssl rand -hex 32)
BETTER_AUTH_SECRET="change-this-to-a-secure-random-string-min-32-chars"
# URL base de la aplicación
BETTER_AUTH_URL="http://localhost:3000"

# =============================================================================
# SERVICIOS EXTERNOS - EMAIL
# =============================================================================
# API Key de Resend para envío de correos (obtener en: https://resend.com)
RESEND_API_KEY="re_your_resend_api_key_here"

# =============================================================================
# SERVICIOS EXTERNOS - CLOUDINARY (Almacenamiento de imágenes)
# =============================================================================
CLOUDINARY_CLOUD_NAME="your_cloud_name"
CLOUDINARY_API_KEY="your_api_key"
CLOUDINARY_API_SECRET="your_api_secret"

# =============================================================================
# REDIS (Caché y sesiones)
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="ticketeate123"

# =============================================================================
# PASARELA DE PAGO - MERCADOPAGO
# =============================================================================
MERCADOPAGO_ACCESS_TOKEN="your_mercadopago_access_token"
MERCADOPAGO_PUBLIC_KEY="your_mercadopago_public_key"

# =============================================================================
# FRONTEND (Next.js)
# =============================================================================
# URL base de la API para el frontend
NEXT_PUBLIC_API_URL="http://localhost:3000"
# URL del servicio de eventos
NEXT_PUBLIC_EVENTS_API_URL="http://localhost:3001"

# =============================================================================
# GITHUB (Para releases automáticos)
# =============================================================================
GITHUB_TOKEN="ghp_your_github_personal_access_token"
GITHUB_OWNER="your_github_username_or_org"
GITHUB_REPO="ticketeate"

# =============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================================================
# Puerto donde correrá la aplicación
PORT="3000"
# Entorno de ejecución (development, production, test)
NODE_ENV="development"